

<body>
    <p id="notice"><%= flash[:notice] %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      
  
  <% if @books.present? %>
  <% @books.each do |book| %>
  	<tr>
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>

    <td>
      <%= link_to "Show", book_path(book) %>
    </td>

    <td>
      <%= link_to "Edit", edit_book_path(book) %>
    </td>

    <td>
      <%= link_to "Destroy", book_path(book), method: :delete %>
    </td>


    </tr>
  <% end %>
  <% end %>
  </tbody>

</table>



  <h2>New book</h2>

<%= form_for(@book) do |f| %>

<%= render 'layouts/error_messages', model: f.object %>


  <div class="field">
      <label for="book_title">Title</label>
        <div class="input"><%= f.text_field :title %>
        </div>
  </div>
   
  <div class="field">
      <label for="book_body">Body</label>
        <div class="input"><%= f.text_area :body %>
        </div>
  </div>


    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>

<% end %>


</body>






